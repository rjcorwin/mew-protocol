{
  "name": "@mew-world/client",
  "version": "0.1.0",
  "description": "MEW World - Multiplayer isometric game client",
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run build:watch\" \"wait-on dist/main.js && electron .\"",
    "build": "tsc && npm run bundle",
    "build:watch": "tsc --watch",
    "bundle": "esbuild dist/renderer.js --bundle --outfile=dist/renderer.bundle.js --format=cjs --platform=node --external:electron",
    "package": "electron-builder"
  },
  "author": "MEW Protocol Team",
  "license": "MIT",
  "dependencies": {
    "@mew-protocol/mew": "file:../..",
    "phaser": "^3.90.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "canvas": "^3.2.0",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "esbuild": "^0.19.0",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.mew.world",
    "productName": "MEW World",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "index.html"
    ],
    "mac": {
      "category": "public.app-category.games",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  },
  "optionalDependencies": {
    "phaser3spectorjs": "^0.0.8"
  }
}
