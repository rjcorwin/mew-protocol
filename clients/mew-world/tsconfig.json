{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "node16",
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "release"]
}
