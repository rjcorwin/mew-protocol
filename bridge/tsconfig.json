{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@mew-protocol/types": ["../sdk/typescript-sdk/types/dist"],
      "@mew-protocol/types/*": ["../sdk/typescript-sdk/types/dist/*"],
      "@mew-protocol/client": ["../sdk/typescript-sdk/client/dist"],
      "@mew-protocol/client/*": ["../sdk/typescript-sdk/client/dist/*"],
      "@mew-protocol/participant": ["../sdk/typescript-sdk/participant/dist"],
      "@mew-protocol/participant/*": ["../sdk/typescript-sdk/participant/dist/*"],
      "@mew-protocol/capability-matcher": ["../sdk/typescript-sdk/capability-matcher/dist"],
      "@mew-protocol/capability-matcher/*": ["../sdk/typescript-sdk/capability-matcher/dist/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "test"]
}