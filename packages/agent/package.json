{
  "name": "@mcpx-protocol/agent",
  "version": "0.1.0",
  "description": "MCPx agent layer - MCP server/client implementation and context management",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "mcpx",
    "mcp",
    "agent",
    "multi-agent",
    "protocol"
  ],
  "author": "MCPx Working Group",
  "license": "MIT",
  "dependencies": {
    "@mcpx-protocol/client": "file:../client"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "@vitest/ui": "^2.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0",
    "@vitest/coverage-v8": "^2.0.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "engines": {
    "node": ">=18.0.0"
  }
}